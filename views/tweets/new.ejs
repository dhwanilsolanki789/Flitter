<% layout('layouts/boilerplate.ejs') -%>
    <h1><span class="me-4"><a href="/fleets" class="text-dark" style="text-decoration:none">&loarr;</a></span>
        New | Flitter </h1>
    <hr>
    <div class="container mt-4">
        <form action="/fleets" method="POST">
            <div class="mb-3 offset-3 col-6">
                <label for="username" class="form-label">Username:</label>
                <input type="text" name="username" id="username" class="form-control" placeholder="Write your username">
            </div>
            <div class="mb-3 offset-3 col-6">
                <label for="tweet" class="form-label">Fleet:</label>
                <textarea name="tweet" id="tweet" cols="30" rows="5" class="form-control">Your fleet here...</textarea>
            </div>
            <div class="mb-3 offset-3 col-6">
                <label for="time" class="form-label">Enter the current time:</label>
                <input type="time" name="time" id="time" class="form-control">
            </div>
            <div class="mb-3 offset-3">
                <button>Post</button>
            </div>
        </form>
    </div>